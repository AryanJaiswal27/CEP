<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme -->
    <style name="Base.Theme.MYW" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Material theme color attributes for dark mode -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <item name="android:colorBackground">#121212</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>

        <item name="android:statusBarColor">#121212</item>
        <item name="android:windowLightStatusBar">false</item> <!-- Light icons for dark status bar -->
    </style>

    <style name="Theme.MYW" parent="Base.Theme.MYW" />
</resources>
